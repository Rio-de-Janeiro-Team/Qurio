<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statusAwardsCard"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@drawable/background_awards">

    <TextView
        android:id="@+id/tvAwardsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/awards_title"
        android:textColor="#8095A0AC"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivCup"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/img_cup"
        app:layout_constraintBottom_toBottomOf="@+id/tvAwardsValue"
        app:layout_constraintEnd_toStartOf="@+id/tvAwardsValue"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@+id/tvAwardsValue" />

    <TextView
        android:id="@+id/tvAwardsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-black"
        android:includeFontPadding="false"
        android:textAlignment="center"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tvAwardsTitle"
        app:layout_constraintStart_toStartOf="@+id/tvAwardsTitle"
        app:layout_constraintTop_toBottomOf="@id/tvAwardsTitle"
        tools:text="16" />

    <ImageView
        android:id="@+id/ivNexy"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/img_next"
        app:layout_constraintBottom_toBottomOf="@+id/tvAwardsValue"
        app:layout_constraintStart_toEndOf="@+id/tvAwardsValue"
        app:layout_constraintTop_toBottomOf="@+id/tvAwardsTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
